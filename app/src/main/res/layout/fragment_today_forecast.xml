            android:layout_width="160dp"
            android:layout_height="60sp"
            android:layout_marginStart="18sp"
            android:layout_weight="1"
            android:src="@drawable/img_2" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="160sp"
            android:layout_height="60sp"
            android:layout_marginEnd="18sp"
            android:layout_weight="1"
            android:src="@drawable/img_2"
            />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="62sp"
        android:layout_below="@id/layout_btns_days"
        android:layout_marginTop="5sp">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView9"
            android:layout_marginTop="10sp"
            android:text="@string/rain_chance_value"
            android:textSize="15sp"
            android:layout_marginStart="250sp"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:text="@string/rain_chance"
            android:textSize="13sp"
            android:layout_marginStart="250sp"/>

        <ImageView
            android:layout_width="30sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="215sp"
            android:layout_marginTop="2sp"
            android:src="@drawable/img_5" />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wind_text"
            android:layout_marginStart="70sp"
            android:layout_marginTop="10sp"
            android:text="@string/wind_speed_value"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/wind_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70sp"
            android:layout_marginTop="5sp"
            android:text="@string/wind_speed"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="30sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="37sp"
            android:layout_marginTop="2sp"
            android:src="@drawable/img_4" />

    </RelativeLayout>

    <LinearLayout
